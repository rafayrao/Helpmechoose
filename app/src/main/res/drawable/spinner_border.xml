<?xml version="1.0" encoding="utf-8"?>

<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <corners
        android:topLeftRadius="10sp"
        android:topRightRadius="10sp"
        android:bottomRightRadius="10sp"
        android:bottomLeftRadius="10sp"
        />

    <!-- You can use gradient with below attributes-->
    <gradient
        android:angle="90"
        android:centerColor="#FBFCFA"
        android:endColor="#FBFCFA"
        android:startColor="#FBFCFA"
        android:type="linear" />

    <!-- You can omit below tag if you don't need stroke -->
    <stroke android:color="#C1C1C1" android:width="2sp" />

    <!-- Set the same value for both width and height to get a circular shape -->
    <size android:width="800sp" android:height="10sp"/>


    <!--if you need only a single color filled shape-->
    <solid android:color="#FFFFFF"/>


</shape>